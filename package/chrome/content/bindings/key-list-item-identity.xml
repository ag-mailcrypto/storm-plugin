<xbl:bindings
    xmlns:xbl="http://www.mozilla.org/xbl"
    xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

    <xbl:script src="chrome://storm/content/lib/utils.jsm" />

    <xbl:binding id="key-list-item-identity">
        <xbl:content flex="1">
            <label class="email"    name="email"    xbl:inherits="value=email"/>
            <!-- <label class="realname" name="name"     xbl:inherits="value=realname"/>  -->
            <label class="comment"  name="comment"  xbl:inherits="value=comment" />
        </xbl:content>

        <xbl:implementation>
            <xbl:field name="_userID" />

            <xbl:property name="userID">
                <xbl:setter>
                    this._userID = val;
                    this.setAttribute("email", this._userID.email);
                    this.setAttribute("comment", cutString(this._userID.comment, 70));
                    this.setAttribute("realname", this._userID.realname);
                </xbl:setter>
                <xbl:getter>
                    return this._userID;
                </xbl:getter>
            </xbl:property>

        </xbl:implementation>
    </xbl:binding>
</xbl:bindings>
